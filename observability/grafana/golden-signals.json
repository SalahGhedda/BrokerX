{
  "annotations": { "list": [] },
  "panels": [
    {
      "type": "timeseries",
      "title": "HTTP Latency P95 / P99",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(brokerx_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(brokerx_http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "HTTP RPS",
      "targets": [
        {
          "expr": "sum(rate(brokerx_http_requests_total[1m])) by (path)",
          "legendFormat": "{{path}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Error Rate",
      "targets": [
        {
          "expr": "sum(rate(brokerx_http_requests_total{status=~\"5..|4..\"}[5m])) / sum(rate(brokerx_http_requests_total[5m]))",
          "legendFormat": "4xx/5xx"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "type": "timeseries",
      "title": "Resource Saturation",
      "targets": [
        { "expr": "process_cpu_seconds_total", "legendFormat": "CPU" },
        { "expr": "process_resident_memory_bytes", "legendFormat": "RSS" }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    }
  ],
  "schemaVersion": 37,
  "editable": true,
  "title": "BrokerX Golden Signals",
  "version": 1
}
